<style>
    #shopify-section-{{ section.id }} {
        background-color: {{section.settings.background_color}};
    }
</style>


<div class="adventure-parent_wrapper">

    <h2 style="color: {{section.settings.background_color_text}};">{{section.settings.text}}</h2>
    
    <p  style="color: {{section.settings.background_color_text}};">{{section.settings.textsmall}}.</p>
    
    <div class="grid-container">
      {% for block in section.blocks %}
            <div class="grid-item">
              <a href="{{block.settings.link}}"><img style="opacity: {{section.settings.overlay}};" src="{{block.settings.image | img_url: '400x'}}" alt=""></a>
              <h2 style="color: {{section.settings.imagetextcolor}}; margin: 0;" class="centered-heading">{{block.settings.textimageheading}}</h2>
              <p style="color: {{section.settings.imagetextcolor}};" class="centered-text">{{block.settings.textimage}}</p>
              <a class="centered-button" style="background-color: {{section.settings.background_button}};" href="{{block.settings.linkbutton}}">{{block.settings.linktext}}</a>
            </div>
      {% endfor %}

    </div>
</div>

    {% schema %}
    {
       "settings": [
           {
            "type": "text",
            "label": "kleine Überschrift",
            "id" : "text"
           },
           {
            "type": "range",
            "label": "Overlay Stärke Bilder",
            "id" : "overlay",
            "min": 0,
            "max": 1,
            "step": 0.1,
            "default": 1

           },
           {
            "type": "text",
            "label": "kleine Überschrift",
            "id" : "textsmall"
           },
           {
            "type": "color",
            "label": "Schrift-Farbe auf dem Bild",
            "id" : "imagetextcolor",
            "default": "#ffffff"
           },
           {
            "type": "color",
            "id": "background_color",
            "label": "Background color",
            "default": "#ffffff"
            },
            {
                "type": "color",
                "id": "background_button",
                "label": "Background Button",
                "default": "#ffffff"
                },
        {
            "type": "color",
            "id": "background_color_text",
            "label": "Text color Überschrift Section",
            "default": "#ffffff"
        }
       ],
       "blocks" : [ 
       {
           "type": "image",
           "name" : "image block",
           "settings" : [
               {
                   "type": "image_picker",
                   "label": "your image",
                   "id" : "image"
               },
               {
                   "type": "url",
                   "label": "Link",
                   "id" : "link"
               },
               {
                "type": "url",
                "label": "Link Button",
                "id" : "linkbutton"
                  },
                  {
                    "type": "text",
                    "label": "Button-Text",
                    "id" : "linktext"
                },
               {
                "type": "text",
                "label": "Bild- Überschrift",
                "id" : "textimageheading"
            },
            {
                "type": "text",
                "label": "Bild- Überschrift",
                "id" : "textimage"
            }
               ]
            }
            ],
            
             "presets": [
           {
               "category": "Adventure-Apple-Grid",
               "name":"Adventure-Apple-Grid"
           }
       ]
    }
    {% endschema %}